@page "/auth/register"

@layout AuthLayout

<div class="h-100 bg-premium-dark">
    <div class="d-flex h-100 justify-content-center align-items-center">
        <div class="mx-auto app-login-box col-md-8">
            <div class="app-logo-inverse mx-auto mb-3"></div>
            <div class="modal-dialog w-100">
                <div class="modal-content">
                    <div class="modal-body">
                        <h5 class="modal-title">
                        </h5><h4 class="mt-2" style="text-align:center">
                            <div>Bienvenido</div>
                            <span>Registrate ahora!</span>
                        </h4>

                        <div class="divider row"></div>
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="position-relative form-group">
                                    <input name="email" id="exampleEmail" placeholder="Email aqui..." type="email" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="position-relative form-group">
                                    <input name="text" id="exampleName" placeholder="Nombre aqui..." type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="position-relative form-group">
                                    <input name="password" id="examplePassword" placeholder="Password aqui..." type="password" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="position-relative form-group">
                                    <input name="passwordrep" id="examplePasswordRep" placeholder="Repetir Password aqui..." type="password" class="form-control">
                                </div>
                            </div>
                        </div>
                       
                        <div class="divider row"></div>
                        <h6 class="mb-0">
                            Ya tienes una cuenta?
                            <a href="auth/login" class="text-primary">Login</a> | <a href="javascript:void(0);" class="text-primary">Recuperar Password</a>
                        </h6>
                    </div>
                    <div class="modal-footer d-block text-center">
                        <button class="btn-wide btn-pill btn-shadow btn-hover-shine btn btn-primary btn-lg">Crear Cuenta</button>
                    </div>
                </div>
            </div>
            <div class="text-center text-white opacity-8 mt-3">Copyright © Lewis Maximo 2020</div>
        </div>
    </div>
</div>